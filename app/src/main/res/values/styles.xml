<resources>

    <style name="IRAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:editTextBackground">@drawable/irapptheme_edit_text_holo_light</item>
    </style>

    <style name="IRAppTheme.Splash" parent="@style/IRAppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="IRAppTheme.Dialog" parent="@style/IRAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="IREditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/irapptheme_edit_text_holo_light</item>
    </style>

</resources>
