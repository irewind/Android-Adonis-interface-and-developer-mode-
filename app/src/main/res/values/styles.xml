<resources>

    <style name="IRAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:editTextBackground">@drawable/irapptheme_edit_text_holo_light</item>
        <item name="tagViewStyle">@style/Widget.TagView</item>
    </style>

    <style name="IRAppTheme.Splash" parent="@style/IRAppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="IRAppTheme.Dialog" parent="@style/IRAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="IREditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/irapptheme_edit_text_holo_light</item>
    </style>

    <style name="IRSwitch">
        <item name="android:switchMinWidth">50dp</item>
        <item name="android:switchPadding">16dp</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:thumbTextPadding">15dp</item>
        <item name="android:track">@drawable/switch_ir_track</item>
    </style>

    <style name="Widget"/>
    <style name="Widget.TagView" parent="@android:style/Widget.TextView">
        <item name="tagCornerRadius">6dp</item>
        <item name="tagPadding">8dp</item>
        <item name="tagUppercase">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
