<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.irewind.fragments.IRAccountPersonalFragment">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_profile" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


                <com.irewind.ui.views.RoundedImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default_picture" />

                <TextView
                    fontPath="fonts/OpenSans-Regular.ttf"
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

                <TextView
                    fontPath="fonts/OpenSans-Regular.ttf"
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTextView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="#bbb"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            fontPath="fonts/OpenSans-Regular.ttf"
            android:id="@+id/middleTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/top"
            android:textColor="@color/irapptheme_color"
            android:textSize="18sp"
            android:background="@color/account_gray"
            android:text="@string/change_password"
            android:gravity="center_vertical"
            android:paddingLeft="15dp" />

        <RelativeLayout
            android:id="@+id/relFirst"
            android:layout_width="match_parent"
            android:layout_below="@+id/middleTitle"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <TextView
                fontPath="fonts/OpenSans-Regular.ttf"
                android:id="@+id/titleCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/current_password" />

            <EditText
                fontPath="fonts/OpenSans-Regular.ttf"
                android:id="@+id/editCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleCurrent"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:text=""
                android:textSize="12sp"
                android:lines="1"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:background="@drawable/edit_data" />
        </RelativeLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            android:layout_below="@+id/relFirst"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:id="@+id/relLast"
            android:layout_width="match_parent"
            android:layout_below="@+id/separator1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <TextView
                fontPath="fonts/OpenSans-Regular.ttf"
                android:id="@+id/titleNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:text="@string/new_password" />

            <EditText
                fontPath="fonts/OpenSans-Regular.ttf"
                android:id="@+id/editNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titleNew"
                android:layout_marginLeft="29dp"
                android:padding="6dp"
                android:text=""
                android:lines="1"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:background="@drawable/edit_data" />
        </RelativeLayout>

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            android:layout_below="@+id/relLast"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp">

            <Button
                fontPath="fonts/OpenSans-Regular.ttf"
                android:id="@+id/btnChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/change_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/change"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
